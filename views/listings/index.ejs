<% layout("/layouts/boilerplate")%>

    <!-- Flash message -->
    <!-- <%= success %>  included in boilerplate only,so removing here -->

  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 1rem;
    }
    .icon:hover{
      opacity: 1;
      cursor: pointer;
    }
    .icon{
      opacity: 0.6;
    }
    .filter p{
      font-size: 0.8rem;
    }
    .tax-info{
      display: none;
    }

    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 4rem;
      padding: 1rem;
      margin-left: 2rem;
    }
  </style>

    <div id="filters">
      <div class="filter">
        <div class="icon"><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div  class="icon"><i class="fa-solid fa-sailboat"></i></div>
        <p>HouseBoats</p>
      </div>

      <div class="filter">
        <div class="icon"><i class="fa-solid fa-city"></i></div>
        <p>Iconic City</p>
      </div>

      <div class="filter">
        <div class="icon"><i class="fa-solid fa-mountain-sun"></i></i></div>
        <p>Mountains</p>
      </div>

      <div class="filter">
        <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>

      <div class="filter">
        <div  class="icon"><i class="fa-solid fa-person-swimming"></i></i></div>
        <p>Amazing Pools</p>
      </div>

      <div class="filter">
        <div class="icon"><i class="fa-solid fa-tent"></i></div>
        <p>Camping</p>
      </div>

      <div class="filter">
        <div class="icon"><i class="fa-solid fa-tractor"></i></div>
        <p>Farming</p>
      </div>
      <div class="filter">
        <div class="icon"><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div class="icon"><i class="fa-solid fa-landmark-dome"></i></div>
        <p>Dome</p>
      </div>
      <div class="filter">
        <div class="icon"><i class="fa-solid fa-utensils"></i></div>
        <p>Breakfast</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
        </div>
      </div>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id%>" class="listing-link">
        <div class="card col listing-card">
        <img src="<%= listing.image %>" class="card-img-top" alt="property_picture" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"> <b><%= listing.title %> </b> 
            <br> &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <i class="tax-info">+18% GST</i>
          </p>

        </div>
      </div>
      </a>
      <% } %>
    </div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", ()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }
      else{
        info.style.display = "none";
      }
    }
  })
</script>